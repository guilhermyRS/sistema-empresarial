<div class="max-w-2xl mx-auto bg-dark rounded-lg border border-gray-800">
  <div class="p-4 border-b border-gray-800">
      <h2 class="text-xl font-semibold">Nova Empresa</h2>
  </div>

  <form action="/companies/create" method="POST" class="p-4">
      <% if (locals.error) { %>
          <div class="mb-4 p-4 bg-red-500/20 border border-red-500 rounded-lg text-red-500">
              <%= error %>
          </div>
      <% } %>

      <div class="space-y-4">
          <div>
              <label class="block text-sm font-medium text-gray-400 mb-1">Nome da Empresa</label>
              <input type="text" name="name" required
                     class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-primary">
          </div>

          <div>
              <label class="block text-sm font-medium text-gray-400 mb-1">CNPJ</label>
              <input type="text" name="cnpj" required
                     class="w-full px-3 py-2 bg-gray-800 border border-gray-700 rounded-lg focus:outline-none focus:border-primary">
          </div>

          <div class="flex justify-end space-x-2 pt-4">
              <a href="/companies" class="px-4 py-2 border border-gray-700 rounded-lg hover:bg-gray-800 transition-colors">
                  Cancelar
              </a>
              <button type="submit" class="px-4 py-2 bg-primary hover:bg-primary/80 rounded-lg transition-colors">
                  Criar Empresa
              </button>
          </div>
      </div>
  </form>
</div>