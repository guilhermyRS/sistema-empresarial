<div class="p-6">
  <h1 class="text-2xl font-bold mb-6">Detalhes do Cliente</h1>
  <div class="bg-gray-800 rounded-lg p-6">
      <div class="space-y-4">
          <div>
              <label class="block text-gray-400">Nome:</label>
              <span class="block"><%= client.name || '-' %></span>
          </div>
          <div>
              <label class="block text-gray-400">CPF:</label>
              <span class="block"><%= client.cpf || '-' %></span>
          </div>
          <div>
              <label class="block text-gray-400">Email:</label>
              <span class="block"><%= client.email || '-' %></span>
          </div>
          <div>
              <label class="block text-gray-400">Telefone:</label>
              <span class="block"><%= client.phone || '-' %></span>
          </div>
          <div>
              <label class="block text-gray-400">Data de Nascimento:</label>
              <span class="block"><%= client.birth_date ? new Date(client.birth_date).toLocaleDateString('pt-BR') : '-' %></span>
          </div>
          <div>
              <label class="block text-gray-400">Endere√ßo:</label>
              <span class="block"><%= client.address || '-' %></span>
          </div>
      </div>
      <div class="mt-6">
          <a href="/clients" class="bg-gray-600 px-4 py-2 rounded-lg hover:bg-opacity-80">Voltar</a>
      </div>
  </div>
</div>